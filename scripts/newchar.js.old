

function createChar() {
	var campSheet = document.getElementsByClassName('mainbox');
	var cmprow;
	for (cmprow = 0; cmprow < campSheet.length; cmprow++) {
		var openCamp = campSheet[cmprow];
		if (!openCamp.classList.contains('hidden')) {
			openCamp.classList.add('hidden');
		}
	}
	var createSheet = document.getElementById('newcharbox');
	createSheet.classList.remove('hidden');
}

function rollAbScores(val) {
	for (scr = 1; scr <= 6; scr++) {
		var abScr = document.getElementById('camp' + val + 'roll' + scr);
		var dieScr = 0;
		var dieMin = 6;
		for (rll = 1; rll <= 4; rll++) {
			dieScr = dieScr + rolld(6);
			if (dieScr < dieMin) {
				dieMin = dieScr;
			}
		}
		dieScr = dieScr - dieMin;
		abScr.setAttribute("value", dieScr);
	}
}


function setDmpack(val) {

	var inputName = [];
	var camps = document.getElementsByClassName('campinput');
	var cmpnum;
	for (cmpnum = 0; cmpnum < camps.length; cmpnum++) {
		var openCamp = camps[cmpnum];
		if (!openCamp.classList.contains('hidden')) {
			openCamp.classList.add('hidden');
		}
		if (openCamp.hasAttribute('name')) {
			inputName.push(openCamp.getAttribute('name'));
			openCamp.removeAttribute('name');
		}
	}

	var viewSelCamp = document.getElementsByClassName('camp' + val);
	var vsc;
	for (vsc = 0; vsc < viewSelCamp.length; vsc++) {
		var vsCmp = viewSelCamp[vsc];
		vsCmp.classList.remove('hidden');
		vsCmp.setAttribute('name', inputName[vsc]);
	}

	var viewSelLbl = document.getElementsByClassName('label' + val);
	var vsl;
	for (vsl = 0; vsl < viewSelLbl.length; vsl++) {
		var vsLbl = viewSelLbl[vsl];
		vsLbl.classList.remove('hidden');
	}


}


function setClass(clsval) {

	var className = [];
	var classes = document.getElementsByClassName('classitem');
	var clsnum;
	for (clsnum = 0; clsnum < classes.length; clsnum++) {
		var openClass = classes[clsnum];
		if (!openClass.classList.contains('hidden')) {
			openClass.classList.add('hidden');
		}
		if (openClass.hasAttribute('name')) {
			className.push(openClass.getAttribute('name'));
			openClass.removeAttribute('name');
		}
	}

	var viewSelClass = document.getElementsByClassName('classid' + clsval);
	var vSc;
	for (vSc = 0; vSc < viewSelClass.length; vSc++) {
		var vsCls = viewSelClass[vSc];
		vsCls.classList.remove('hidden');
		vsCls.setAttribute('name', className[vSc]);
	}

	var viewClsLbl = document.getElementsByClassName('classlbl' + clsval);
	var vcl;
	for (vcl = 0; vcl < viewClsLbl.length; vcl++) {
		var vsLbl = viewClsLbl[vcl];
		vsLbl.classList.remove('hidden');
	}


}
